  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :development, :test do
	gem 'ruby-debug19'
	gem 'sqlite3'
	gem 'rspec-rails'
	gem 'spork-rails'
	gem 'fabrication'
	gem 'rb-fsevent'
	gem 'growl'
	gem 'guard-rspec'
	gem 'guard-spork'
end

group :production do
	gem 'pg'
end